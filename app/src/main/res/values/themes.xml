<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme that follows system dark/light mode -->
    <style name="Theme.BenedictMovies" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Light mode colors (will be overridden in values-night) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Light mode background and text colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!-- Theme for Compose activities that also follows system settings -->
    <style name="Theme.BenedictMovies.Compose" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Same base as main theme for consistency -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Transparent background for Compose -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Enable edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Light status bar content -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>