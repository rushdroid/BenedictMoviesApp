<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark mode theme - automatically used when system is in dark mode -->
    <style name="Theme.BenedictMovies" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Dark mode colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color for dark mode -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Dark mode background and text colors -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!-- Dark mode theme for Compose activities -->
    <style name="Theme.BenedictMovies.Compose" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Dark mode colors for Compose -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color for dark mode -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Transparent background for Compose -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Enable edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Dark status bar content for dark theme -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
