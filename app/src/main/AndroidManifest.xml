<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BenedictMoviesApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BenedictMovies">

        <!-- Main Activity with XML Fragment - uses AppCompat theme -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BenedictMovies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Movie Detail Activity with Jetpack Compose - uses Compose theme -->
        <activity
            android:name=".presentation.ui.activity.MovieDetailActivity"
            android:exported="false"
            android:label="Movie Detail"
            android:theme="@style/Theme.BenedictMovies.Compose" />
    </application>

</manifest>